#!/usr/bin/env python

import argparse

import leo_fw
from leo_fw.test_hw import TestMode

parser = argparse.ArgumentParser(description="Test Leo Core controller")

# parser.add_argument(
#     "-r",
#     "--record",
#     dest="rosbag",
#     action="store_false",
#     help="record bug file",
# )
parser.add_argument(
    "-hw",
    dest="hardware",
    type=TestMode,
    choices=list(TestMode),
    default="all",
    help="hardware to test",
)

args = parser.parse_args()
HwTester = leo_fw.HardwareTester()

HwTester.test_hw(
    hardware=args.hardware,
)
